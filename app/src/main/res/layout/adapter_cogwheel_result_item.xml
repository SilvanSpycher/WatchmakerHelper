<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/cwri_layout"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/cwri_img_ruler_error"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/error_symbol" />

    <TextView
        android:id="@+id/cwri_txt_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/test_string"
        app:layout_constraintBottom_toBottomOf="@id/cwri_img_ruler_error"
        app:layout_constraintStart_toEndOf="@+id/cwri_img_ruler_error"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/cwri_img_nr_of_cogwheels"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/cwri_txt_nr_of_cogwheels"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cogwheel_multiple" />

    <TextView
        android:id="@+id/cwri_txt_nr_of_cogwheels"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/test_string"
        app:layout_constraintBottom_toBottomOf="@id/cwri_img_nr_of_cogwheels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent" />



</android.support.constraint.ConstraintLayout>