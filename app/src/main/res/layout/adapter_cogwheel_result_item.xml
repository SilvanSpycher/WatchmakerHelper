<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    >


    <TextView
        android:id="@+id/cwri_txt_number_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/test_string"
        app:layout_constraintBottom_toBottomOf="@id/cwri_img_cogwheel_left"
        app:layout_constraintEnd_toStartOf="@+id/cwri_img_cogwheel_left"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/cwri_img_cogwheel_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cogwheel" />

    <TextView
        android:id="@+id/cwri_txt_number_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/test_string"
        app:layout_constraintBottom_toBottomOf="@id/cwri_img_cogwheel_right"
        app:layout_constraintStart_toEndOf="@+id/cwri_img_cogwheel_right"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/cwri_img_cogwheel_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cogwheel"
        android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>